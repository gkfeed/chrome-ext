{
  "manifest_version": 2,
  "name": "Simple Color Changer",
  "version": "1.0",
  "description": "Changes background color of the page.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
